{
  "name": "inline_markdown",
  "version": "0.1.0",
  "description": "A customizable HTML template to self-render the inlined Markdown text",
  "main": "main.js",
  "scripts": {
    "build": "npm run build:webpack && npm run build:inline",
    "build:webpack": "webpack-cli",
    "build:inline": "inline-source --root html html/template.html inline_markdown.html",
    "view": "firefox inline_markdown.html",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "https://github.com/wak109",
  "license": "MIT",
  "devDependencies": {
    "awesome-typescript-loader": "^5.0.0",
    "inline-source": "^6.1.5",
    "inline-source-cli": "^1.2.0",
    "typescript": "^2.8.3",
    "webpack": "^4.9.1",
    "webpack-cli": "^2.1.4"
  },
  "dependencies": {
    "@types/highlight.js": "^9.12.2",
    "@types/marked": "^0.3.0",
    "highlight.js": "^9.12.0",
    "marked": "^0.3.19"
  }
}
